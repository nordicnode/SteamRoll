<Window x:Class="SteamRoll.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SteamRoll"
        xmlns:controls="clr-namespace:SteamRoll.Controls"
        xmlns:models="clr-namespace:SteamRoll.Models"
        mc:Ignorable="d"
        Title="SteamRoll" Height="900" Width="1400"
        WindowStartupLocation="CenterScreen"
        Background="{StaticResource BackgroundDarkBrush}"
        Foreground="{StaticResource TextPrimaryBrush}"
        FontFamily="Segoe UI"
        WindowStyle="None"
        AllowsTransparency="True"
        ResizeMode="CanResizeWithGrip">

    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="40"
                      ResizeBorderThickness="5"
                      GlassFrameThickness="0"
                      CornerRadius="0"/>
    </WindowChrome.WindowChrome>

    <Window.Resources>
        <!-- Boolean to Visibility Converters -->
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
        <controls:BooleanToVisibilityInverseConverter x:Key="BoolToVisInverse"/>
        <controls:NullToVisibilityConverter x:Key="NullToVis"/>
        <controls:BooleanToHeartConverter x:Key="BoolToHeart"/>
        <controls:BooleanToHeartColorConverter x:Key="BoolToHeartColor"/>

        <!-- Header Image Border Style -->
        <Style x:Key="HeaderImageBorderStyle" TargetType="Border">
            <Setter Property="CornerRadius" Value="12,12,0,0"/>
            <Setter Property="ClipToBounds" Value="True"/>
            <Setter Property="Height" Value="140"/>
            <Setter Property="Background" Value="#0D1117"/>
            <Setter Property="BorderThickness" Value="0,0,0,1"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderSubtleBrush}"/>
        </Style>

        <!-- Status Badge Text Style -->
        <Style x:Key="StatusBadgeText" TargetType="TextBlock">
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="6,2"/>
        </Style>

        <!-- Primary Toggle Button Style -->
        <Style x:Key="PrimaryToggleStyle" TargetType="ToggleButton">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{StaticResource TextSecondaryBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderSubtleBrush}"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Border x:Name="border" Background="{TemplateBinding Background}"
                                CornerRadius="6" BorderThickness="{TemplateBinding BorderThickness}"
                                BorderBrush="{TemplateBinding BorderBrush}" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{StaticResource AccentPrimaryBrush}"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource AccentPrimaryBrush}"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#21262D"/>
                            </Trigger>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#1F6FEB"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Navigation Tab Button Style -->
        <Style x:Key="NavTabStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{StaticResource TextSecondaryBrush}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="16,8"/>
            <Setter Property="Margin" Value="0,0,4,0"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
                                <Setter TargetName="border" Property="Background" Value="#21262D"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Context Menu Style -->
        <Style TargetType="ContextMenu">
            <Setter Property="Background" Value="{StaticResource BackgroundLightBrush}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderSubtleBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
            <Setter Property="HasDropShadow" Value="True"/>
            <Setter Property="Padding" Value="4"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ContextMenu">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6" Padding="{TemplateBinding Padding}">
                            <StackPanel IsItemsHost="True" KeyboardNavigation.DirectionalNavigation="Cycle"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="MenuItem">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
            <Setter Property="Padding" Value="10,6"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="MenuItem">
                        <Border x:Name="Border" Background="{TemplateBinding Background}" CornerRadius="4" Padding="{TemplateBinding Padding}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="24"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <ContentPresenter Grid.Column="0" ContentSource="Icon" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                <ContentPresenter Grid.Column="1" ContentSource="Header" VerticalAlignment="Center" Margin="8,0,0,0"/>
                                <TextBlock Grid.Column="2" Text="{TemplateBinding InputGestureText}" Foreground="{StaticResource TextSecondaryBrush}" Margin="16,0,0,0" VerticalAlignment="Center" FontSize="11"/>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsHighlighted" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="{StaticResource AccentPrimaryBrush}"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Foreground" Value="{StaticResource TextMutedBrush}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Redesigned Game Card Template -->
        <DataTemplate x:Key="GameCardTemplate" DataType="{x:Type models:InstalledGame}">
            <Border Style="{DynamicResource GameCard}" Width="260" Height="380" Tag="{Binding}" MouseLeftButtonDown="GameCard_Click">
                <Border.InputBindings>
                    <MouseBinding MouseAction="LeftDoubleClick" Command="{Binding PackageCommand}"/>
                </Border.InputBindings>
                <Border.ContextMenu>
                    <ContextMenu>
                        <MenuItem Header="Package Game" Click="ContextMenu_Package_Click" Icon="ğŸ“¦" Visibility="{Binding IsPackaged, Converter={StaticResource BoolToVisInverse}}"/>
                        <MenuItem Header="Update Package" Click="ContextMenu_Package_Click" Icon="ğŸ”„" Visibility="{Binding UpdateAvailable, Converter={StaticResource BoolToVis}}"/>
                        <MenuItem Header="Open Package Folder" Click="ContextMenu_Package_Click" Icon="ğŸ“‚" Visibility="{Binding IsPackaged, Converter={StaticResource BoolToVis}}"/>
                        <MenuItem Header="Delete Package" Click="ContextMenu_DeletePackage_Click" Icon="ğŸ—‘ï¸" Visibility="{Binding IsPackaged, Converter={StaticResource BoolToVis}}"/>
                        <Separator/>
                        <MenuItem Header="Send to Peer..." Click="ContextMenu_SendToPeer_Click" Icon="ğŸ“¤" IsEnabled="{Binding IsPackaged}"/>
                        <MenuItem Header="Sync Saves..." Click="ContextMenu_SyncSaves_Click" Icon="ğŸ’¾" IsEnabled="{Binding IsPackaged}"/>
                        <MenuItem Header="Backup Saves" Click="ContextMenu_BackupSave_Click" Icon="ğŸ“¥" IsEnabled="{Binding IsPackaged}"/>
                        <Separator/>
                        <MenuItem Header="Verify Integrity" Click="ContextMenu_VerifyIntegrity_Click" Icon="ğŸ›¡ï¸" IsEnabled="{Binding IsPackaged}"/>
                        <MenuItem Header="Advanced Config..." Click="ContextMenu_AdvancedConfig_Click" Icon="âš™ï¸"/>
                        <Separator/>
                        <MenuItem Header="Open Install Folder" Click="ContextMenu_OpenInstallFolder_Click" Icon="ğŸ“"/>
                        <MenuItem Header="View on Steam Store" Click="ContextMenu_OpenSteamStore_Click" Icon="ğŸŒ"/>
                        <MenuItem Header="Toggle Favorite" Click="ContextMenu_Favorite_Click" Icon="â­"/>
                    </ContextMenu>
                </Border.ContextMenu>

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/> <!-- Image -->
                        <RowDefinition Height="*"/>    <!-- Content -->
                        <RowDefinition Height="Auto"/> <!-- Actions -->
                    </Grid.RowDefinitions>

                    <!-- Header Image -->
                    <Border Grid.Row="0" Style="{StaticResource HeaderImageBorderStyle}">
                        <Grid>
                            <Image Source="{Binding HeaderImageUrl}" Stretch="UniformToFill"/>
                            <!-- Gradient Overlay -->
                            <Border Background="{StaticResource HeaderGradient}" Opacity="0.1"/>

                            <!-- Badges Overlay (Top Right) -->
                            <StackPanel Orientation="Vertical" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="8">
                                <!-- Favorite Badge -->
                                <Border Background="#CCF778BA" CornerRadius="4" Padding="6,2" Margin="0,0,0,4"
                                        Visibility="{Binding IsFavorite, Converter={StaticResource BoolToVis}}">
                                    <TextBlock Text="â­" FontSize="10" Foreground="White" FontWeight="Bold"/>
                                </Border>
                            </StackPanel>

                            <!-- Selection Checkbox (Top Left) -->
                            <CheckBox IsChecked="{Binding IsSelected}"
                                      VerticalAlignment="Top" HorizontalAlignment="Left" Margin="8"
                                      Style="{StaticResource {x:Type CheckBox}}">
                                <CheckBox.LayoutTransform>
                                    <ScaleTransform ScaleX="1.2" ScaleY="1.2"/>
                                </CheckBox.LayoutTransform>
                            </CheckBox>

                            <!-- Status Badge (Bottom Left of Image) -->
                            <Border VerticalAlignment="Bottom" HorizontalAlignment="Left" Margin="8"
                                    CornerRadius="4" Padding="8,4">
                                <Border.Style>
                                    <Style TargetType="Border">
                                        <Setter Property="Background" Value="#CC1F2937"/>
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsPackaged}" Value="True">
                                                <Setter Property="Background" Value="#CC238636"/>
                                                <Setter Property="Visibility" Value="Visible"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding UpdateAvailable}" Value="True">
                                                <Setter Property="Background" Value="#CCD29922"/>
                                                <Setter Property="Visibility" Value="Visible"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Border.Style>
                                <TextBlock FontWeight="Bold" FontSize="11" Foreground="White">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Text" Value="INSTALLED"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsPackaged}" Value="True">
                                                    <Setter Property="Text" Value="PACKAGED"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding UpdateAvailable}" Value="True">
                                                    <Setter Property="Text" Value="UPDATE AVAILABLE"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </Border>
                        </Grid>
                    </Border>

                    <!-- Content -->
                    <StackPanel Grid.Row="1" Margin="12,12,12,4">
                        <TextBlock Text="{Binding Name}" FontWeight="Bold" FontSize="15" TextTrimming="CharacterEllipsis"
                                   ToolTip="{Binding Name}" Foreground="{StaticResource TextPrimaryBrush}" Margin="0,0,0,6"/>

                        <Grid Margin="0,0,0,8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="{Binding FormattedSize}" Foreground="{StaticResource TextSecondaryBrush}" FontSize="12"/>

                            <!-- Metacritic/Review Score Mini-Badge -->
                            <Border Grid.Column="1" CornerRadius="3" Background="#21262D" Padding="4,1"
                                    Visibility="{Binding MetacriticScore, Converter={StaticResource NullToVis}}">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="M" FontSize="10" Foreground="{StaticResource TextMutedBrush}" Margin="0,0,4,0"/>
                                    <TextBlock Text="{Binding MetacriticScore}" FontSize="11" FontWeight="Bold" Foreground="{StaticResource AccentPrimaryBrush}"/>
                                </StackPanel>
                            </Border>
                        </Grid>

                        <!-- Tags / Info -->
                        <WrapPanel Orientation="Horizontal" Margin="0,4,0,0">
                            <!-- DLC Badge -->
                            <Border Background="#1A1F26" CornerRadius="4" Padding="6,2" Margin="0,0,6,6"
                                    Visibility="{Binding HasDlc, Converter={StaticResource BoolToVis}}">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="DLC" FontSize="10" Foreground="#A371F7" FontWeight="Bold"/>
                                    <TextBlock Text="{Binding TotalDlcCount}" Margin="4,0,0,0" FontSize="10" Foreground="{StaticResource TextSecondaryBrush}"/>
                                </StackPanel>
                            </Border>

                            <!-- Received Badge -->
                            <Border Background="#1A2F26" CornerRadius="4" Padding="6,2" Margin="0,0,6,6"
                                    Visibility="{Binding IsReceivedPackage, Converter={StaticResource BoolToVis}}">
                                <TextBlock Text="RECEIVED" FontSize="10" Foreground="#3FB950" FontWeight="Bold"/>
                            </Border>
                        </WrapPanel>
                    </StackPanel>

                    <!-- Actions Footer -->
                    <Grid Grid.Row="2" Margin="12,0,12,12">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <!-- Primary Action Button -->
                        <Button Click="PackageButton_Click" Tag="{Binding}" Height="32">
                            <Button.Style>
                                <Style TargetType="Button" BasedOn="{StaticResource PrimaryButton}">
                                    <Setter Property="Content" Value="Package Game"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsPackaged}" Value="True">
                                            <Setter Property="Content" Value="Open Folder"/>
                                            <Setter Property="Background" Value="#21262D"/>
                                            <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
                                            <Setter Property="BorderBrush" Value="{StaticResource BorderSubtleBrush}"/>
                                            <Setter Property="BorderThickness" Value="1"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding UpdateAvailable}" Value="True">
                                            <Setter Property="Content" Value="Update Package"/>
                                            <Setter Property="Background" Value="{StaticResource WarningBrush}"/>
                                            <Setter Property="Foreground" Value="Black"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding IsPackageable}" Value="False">
                                            <Setter Property="IsEnabled" Value="False"/>
                                            <Setter Property="Content" Value="Not Ready"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>

                        <!-- Send Button (Only if Packaged) -->
                        <Button Grid.Column="1" Margin="8,0,0,0" Click="SendToPeerButton_Click" Tag="{Binding}"
                                Style="{StaticResource SecondaryButton}" Padding="8"
                                ToolTip="Send to Peer"
                                Visibility="{Binding IsPackaged, Converter={StaticResource BoolToVis}}">
                            <TextBlock Text="ğŸ“¤" FontSize="14"/>
                        </Button>

                        <!-- Favorite Toggle (If NOT Packaged) -->
                        <ToggleButton Grid.Column="1" Margin="8,0,0,0" Click="FavoriteToggle_Click" Tag="{Binding}"
                                      IsChecked="{Binding IsFavorite, Mode=TwoWay}"
                                      Style="{StaticResource PrimaryToggleStyle}" Padding="8"
                                      ToolTip="Add to Favorites"
                                      Visibility="{Binding IsPackaged, Converter={StaticResource BoolToVisInverse}}">
                            <TextBlock Text="{Binding IsFavorite, Converter={StaticResource BoolToHeart}}"
                                       Foreground="{Binding IsFavorite, Converter={StaticResource BoolToHeartColor}}"
                                       FontSize="14"/>
                        </ToggleButton>
                    </Grid>
                </Grid>
            </Border>
        </DataTemplate>
        
        <!-- List View Item Template (Simpler Row) -->
        <DataTemplate x:Key="GameListItemTemplate" DataType="{x:Type models:InstalledGame}">
            <Border Background="{StaticResource BackgroundCardBrush}" BorderThickness="0,0,0,1" BorderBrush="{StaticResource BorderSubtleBrush}" Padding="8">
                <Border.ContextMenu>
                    <ContextMenu>
                        <MenuItem Header="Package Game" Click="ContextMenu_Package_Click" Icon="ğŸ“¦" Visibility="{Binding IsPackaged, Converter={StaticResource BoolToVisInverse}}"/>
                        <MenuItem Header="Update Package" Click="ContextMenu_Package_Click" Icon="ğŸ”„" Visibility="{Binding UpdateAvailable, Converter={StaticResource BoolToVis}}"/>
                        <MenuItem Header="Open Package Folder" Click="ContextMenu_Package_Click" Icon="ğŸ“‚" Visibility="{Binding IsPackaged, Converter={StaticResource BoolToVis}}"/>
                        <MenuItem Header="Delete Package" Click="ContextMenu_DeletePackage_Click" Icon="ğŸ—‘ï¸" Visibility="{Binding IsPackaged, Converter={StaticResource BoolToVis}}"/>
                        <Separator/>
                        <MenuItem Header="Send to Peer..." Click="ContextMenu_SendToPeer_Click" Icon="ğŸ“¤" IsEnabled="{Binding IsPackaged}"/>
                        <MenuItem Header="Sync Saves..." Click="ContextMenu_SyncSaves_Click" Icon="ğŸ’¾" IsEnabled="{Binding IsPackaged}"/>
                        <MenuItem Header="Backup Saves" Click="ContextMenu_BackupSave_Click" Icon="ğŸ“¥" IsEnabled="{Binding IsPackaged}"/>
                        <Separator/>
                        <MenuItem Header="Verify Integrity" Click="ContextMenu_VerifyIntegrity_Click" Icon="ğŸ›¡ï¸" IsEnabled="{Binding IsPackaged}"/>
                        <MenuItem Header="Advanced Config..." Click="ContextMenu_AdvancedConfig_Click" Icon="âš™ï¸"/>
                        <Separator/>
                        <MenuItem Header="Open Install Folder" Click="ContextMenu_OpenInstallFolder_Click" Icon="ğŸ“"/>
                        <MenuItem Header="View on Steam Store" Click="ContextMenu_OpenSteamStore_Click" Icon="ğŸŒ"/>
                        <MenuItem Header="Toggle Favorite" Click="ContextMenu_Favorite_Click" Icon="â­"/>
                    </ContextMenu>
                </Border.ContextMenu>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="32"/> <!-- Icon -->
                        <ColumnDefinition Width="*"/>  <!-- Name -->
                        <ColumnDefinition Width="100"/> <!-- Status -->
                        <ColumnDefinition Width="80"/> <!-- Size -->
                        <ColumnDefinition Width="120"/> <!-- Actions -->
                    </Grid.ColumnDefinitions>
                    
                    <Image Grid.Column="0" Source="{Binding HeaderImageUrl}" Height="24" Width="24" Stretch="UniformToFill" Margin="0,0,8,0">
                         <Image.Clip>
                            <RectangleGeometry Rect="0,0,24,24" RadiusX="4" RadiusY="4"/>
                         </Image.Clip>
                    </Image>
                    
                    <TextBlock Grid.Column="1" Text="{Binding Name}" VerticalAlignment="Center" FontWeight="SemiBold"/>

                    <Border Grid.Column="2" Background="#21262D" CornerRadius="4" Padding="8,2" HorizontalAlignment="Center" VerticalAlignment="Center"
                            Visibility="{Binding IsPackaged, Converter={StaticResource BoolToVis}}">
                        <TextBlock Text="Packaged" FontSize="11" Foreground="#3FB950"/>
                    </Border>

                    <TextBlock Grid.Column="3" Text="{Binding FormattedSize}" VerticalAlignment="Center" HorizontalAlignment="Right" Foreground="{StaticResource TextSecondaryBrush}" Margin="0,0,16,0"/>

                    <StackPanel Grid.Column="4" Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button Content="Package" Click="PackageButton_Click" Tag="{Binding}" Style="{StaticResource PrimaryButton}" Padding="8,4" FontSize="11"
                                Visibility="{Binding IsPackaged, Converter={StaticResource BoolToVisInverse}}"/>
                        <Button Content="Open" Click="PackageButton_Click" Tag="{Binding}" Style="{StaticResource SecondaryButton}" Padding="8,4" FontSize="11"
                                Visibility="{Binding IsPackaged, Converter={StaticResource BoolToVis}}"/>
                    </StackPanel>
                </Grid>
            </Border>
        </DataTemplate>

    </Window.Resources>

    <Border Background="{StaticResource BackgroundDarkBrush}" BorderBrush="#30363D" BorderThickness="1">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/> <!-- Custom Title Bar -->
                <RowDefinition Height="Auto"/> <!-- Main Toolbar -->
                <RowDefinition Height="Auto"/> <!-- Stats / Filters Bar -->
                <RowDefinition Height="*"/>    <!-- Content -->
                <RowDefinition Height="Auto"/> <!-- Status Footer -->
            </Grid.RowDefinitions>

            <!-- 1. Custom Title Bar -->
            <Grid Grid.Row="0" Height="40" Background="#0D1117" MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Logo / Title -->
                <StackPanel Orientation="Horizontal" Margin="16,0,0,0" VerticalAlignment="Center">
                    <TextBlock Text="ğŸš€" FontSize="16" Margin="0,0,8,0"/>
                    <TextBlock Text="SteamRoll" FontSize="14" FontWeight="Bold" Foreground="{StaticResource TextPrimaryBrush}"/>
                    <Border Background="#21262D" CornerRadius="4" Padding="6,1" Margin="12,0,0,0">
                        <TextBlock Text="BETA" FontSize="10" Foreground="{StaticResource AccentPrimaryBrush}" FontWeight="Bold"/>
                    </Border>
                </StackPanel>

                <!-- Window Controls -->
                <StackPanel Grid.Column="2" Orientation="Horizontal">
                    <Button Click="MinimizeButton_Click" Content="â”€" Style="{StaticResource SecondaryButton}" BorderThickness="0" Width="46" Height="40" CornerRadius="0"/>
                    <Button x:Name="MaximizeButton" Click="MaximizeButton_Click" Content="â" Style="{StaticResource SecondaryButton}" BorderThickness="0" Width="46" Height="40" CornerRadius="0"/>
                    <Button Click="CloseButton_Click" Content="âœ•" Style="{StaticResource SecondaryButton}" BorderThickness="0" Width="46" Height="40" CornerRadius="0">
                        <Button.Triggers>
                            <EventTrigger RoutedEvent="MouseEnter">
                                <BeginStoryboard>
                                    <Storyboard>
                                        <ColorAnimation Storyboard.TargetProperty="(Button.Background).(SolidColorBrush.Color)" To="#DA3633" Duration="0:0:0.1"/>
                                        <ColorAnimation Storyboard.TargetProperty="(Button.Foreground).(SolidColorBrush.Color)" To="White" Duration="0:0:0.1"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                            <EventTrigger RoutedEvent="MouseLeave">
                                <BeginStoryboard>
                                    <Storyboard>
                                        <ColorAnimation Storyboard.TargetProperty="(Button.Background).(SolidColorBrush.Color)" To="Transparent" Duration="0:0:0.1"/>
                                        <ColorAnimation Storyboard.TargetProperty="(Button.Foreground).(SolidColorBrush.Color)" To="{StaticResource TextSecondary}" Duration="0:0:0.1"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                        </Button.Triggers>
                    </Button>
                </StackPanel>
            </Grid>

            <!-- 2. Main Toolbar -->
            <Border Grid.Row="1" Background="{StaticResource BackgroundMediumBrush}" BorderThickness="0,1,0,0" BorderBrush="{StaticResource BorderSubtleBrush}" Padding="16,12">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/> <!-- Tabs -->
                        <ColumnDefinition Width="*"/>    <!-- Spacer -->
                        <ColumnDefinition Width="Auto"/> <!-- Search & Actions -->
                    </Grid.ColumnDefinitions>

                    <!-- View Tabs -->
                    <StackPanel Orientation="Horizontal">
                        <Button x:Name="LibraryTabBtn" Content="Library" Click="LibraryTab_Click" Style="{StaticResource NavTabStyle}" Background="#30363D" Foreground="{StaticResource TextPrimaryBrush}"/>
                        <Button x:Name="PackagesTabBtn" Content="Packages" Click="PackagesTab_Click" Style="{StaticResource NavTabStyle}"/>
                    </StackPanel>

                    <!-- Search and Global Actions -->
                    <StackPanel Grid.Column="2" Orientation="Horizontal" Spacing="8">
                        <TextBox x:Name="SearchBox" Width="240" Style="{StaticResource SearchBoxStyle}"
                                 Text="ğŸ” Search games..." GotFocus="SearchBox_GotFocus" LostFocus="SearchBox_LostFocus" TextChanged="SearchBox_TextChanged"/>

                        <Button Click="RefreshButton_Click" Style="{StaticResource SecondaryButton}" ToolTip="Refresh Library">
                            <TextBlock Text="ğŸ”„"/>
                        </Button>
                        <Button Click="SettingsButton_Click" Style="{StaticResource SecondaryButton}" ToolTip="Settings">
                            <TextBlock Text="âš™ï¸"/>
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- 3. Stats & Filter Bar -->
            <Border Grid.Row="2" Background="{StaticResource BackgroundMediumBrush}" BorderThickness="0,0,0,1" BorderBrush="{StaticResource BorderSubtleBrush}" Padding="16,8">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/> <!-- Stats -->
                        <ColumnDefinition Width="*"/>    <!-- Filter Toggles -->
                        <ColumnDefinition Width="Auto"/> <!-- Sorting & View Mode -->
                    </Grid.ColumnDefinitions>

                    <!-- Library Stats -->
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <TextBlock Foreground="{StaticResource TextSecondaryBrush}" FontSize="12">
                            <Run x:Name="TotalGamesText" Text="0" FontWeight="Bold" Foreground="{StaticResource TextPrimaryBrush}"/> Games
                            <Run Text=" â€¢ " Foreground="{StaticResource BorderSubtleBrush}"/>
                            <Run x:Name="PackageableText" Text="0" FontWeight="Bold" Foreground="{StaticResource SuccessBrush}"/> Ready
                            <Run Text=" â€¢ " Foreground="{StaticResource BorderSubtleBrush}"/>
                            <Run x:Name="TotalSizeText" Text="0 B" FontWeight="Bold" Foreground="{StaticResource TextPrimaryBrush}"/>
                        </TextBlock>

                        <!-- Network Status Indicator -->
                        <Border Margin="16,0,0,0" Background="#1A1F26" CornerRadius="4" Padding="8,2" BorderThickness="1" BorderBrush="{StaticResource BorderSubtleBrush}">
                            <TextBlock x:Name="NetworkStatusText" Text="ğŸ“¡ Offline" FontSize="11" Foreground="{StaticResource TextSecondaryBrush}"/>
                        </Border>
                    </StackPanel>

                    <!-- Filters -->
                    <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center" Spacing="6">
                        <ToggleButton x:Name="FilterReadyBtn" Content="Ready to Package" Click="FilterReady_Click" Style="{StaticResource PrimaryToggleStyle}" FontSize="11"/>
                        <ToggleButton x:Name="FilterPackagedBtn" Content="Packaged" Click="FilterPackaged_Click" Style="{StaticResource PrimaryToggleStyle}" FontSize="11"/>
                        <ToggleButton x:Name="FilterDlcBtn" Content="Has DLC" Click="FilterDlc_Click" Style="{StaticResource PrimaryToggleStyle}" FontSize="11"/>
                        <ToggleButton x:Name="FilterUpdateBtn" Content="Updates" Click="FilterUpdate_Click" Style="{StaticResource PrimaryToggleStyle}" FontSize="11"/>
                        <ToggleButton x:Name="FilterFavoritesBtn" Content="Favorites" Click="FilterFavorites_Click" Style="{StaticResource PrimaryToggleStyle}" FontSize="11"/>
                    </StackPanel>

                    <!-- Sorting and View Switcher -->
                    <StackPanel Grid.Column="2" Orientation="Horizontal" Spacing="8">
                        <!-- Batch Actions (Contextual) -->
                        <StackPanel x:Name="BatchActionBar" Orientation="Horizontal" Visibility="Collapsed" Margin="0,0,16,0">
                            <TextBlock x:Name="BatchSelectionText" Text="0 selected" VerticalAlignment="Center" Margin="0,0,8,0" FontSize="12"/>
                            <Button x:Name="BatchPackageButton" Content="Package" Click="BatchPackage_Click" Style="{StaticResource PrimaryButton}" Padding="8,4" FontSize="11"/>
                            <Button x:Name="BatchSendBtn" Content="Send" Click="BatchSendToPeer_Click" Style="{StaticResource SecondaryButton}" Padding="8,4" FontSize="11" Margin="4,0,0,0"/>
                            <Button x:Name="BatchClearButton" Content="âœ•" Click="BatchClear_Click" Style="{StaticResource SecondaryButton}" Padding="6,4" FontSize="11" Margin="4,0,0,0"/>
                        </StackPanel>

                        <ComboBox x:Name="SortBox" Width="120" Style="{StaticResource DarkComboBox}" SelectionChanged="SortBox_SelectionChanged">
                            <ComboBoxItem Content="Name (A-Z)" IsSelected="True" Tag="Name"/>
                            <ComboBoxItem Content="Size (Largest)" Tag="Size"/>
                            <ComboBoxItem Content="Last Played" Tag="LastPlayed"/>
                            <ComboBoxItem Content="Review Score" Tag="ReviewScore"/>
                        </ComboBox>
                        
                        <ToggleButton x:Name="ViewModeToggle" Click="ViewModeToggle_Click" Style="{StaticResource PrimaryToggleStyle}" Padding="8" ToolTip="Toggle View">
                             <TextBlock x:Name="ViewModeIcon" Text="ğŸ“‘" FontSize="14"/>
                        </ToggleButton>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- 4. Content Area -->
            <Grid Grid.Row="3" Background="{StaticResource BackgroundDarkBrush}">
                <!-- Loading / Skeleton -->
                <controls:SkeletonView x:Name="SkeletonView" Visibility="Collapsed" Panel.ZIndex="10"/>

                <!-- Game Details View -->
                <controls:GameDetailsView x:Name="GameDetailsView" Visibility="Collapsed" Panel.ZIndex="5"/>

                <!-- Grid View -->
                <ScrollViewer x:Name="GamesGridScroll" Style="{StaticResource {x:Type ScrollViewer}}" Template="{DynamicResource {x:Type ScrollViewer}}">
                     <ScrollViewer.Resources>
                        <Style TargetType="ScrollBar" BasedOn="{StaticResource DarkScrollBarStyle}"/>
                    </ScrollViewer.Resources>
                    <ItemsControl x:Name="GamesList" ItemTemplate="{StaticResource GameCardTemplate}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel ItemWidth="276" ItemHeight="396" Margin="16"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                    </ItemsControl>
                </ScrollViewer>

                <!-- List View -->
                <ListView x:Name="GamesListView" Visibility="Collapsed"
                          ItemTemplate="{StaticResource GameListItemTemplate}"
                          Background="Transparent" BorderThickness="0"
                          ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                         <ListView.Resources>
                            <Style TargetType="ScrollBar" BasedOn="{StaticResource DarkScrollBarStyle}"/>
                        </ListView.Resources>
                    <ListView.ItemContainerStyle>
                        <Style TargetType="ListViewItem">
                            <Setter Property="Background" Value="Transparent"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="ListViewItem">
                                        <Border Background="{TemplateBinding Background}">
                                            <ContentPresenter/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#1F2937"/>
                                            </Trigger>
                                            <Trigger Property="IsSelected" Value="True">
                                                <Setter Property="Background" Value="#21262D"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </ListView.ItemContainerStyle>
                </ListView>

                <!-- Empty State -->
                <StackPanel x:Name="EmptyStatePanel" Visibility="Collapsed" VerticalAlignment="Center" HorizontalAlignment="Center" Opacity="0.7">
                    <TextBlock Text="ğŸ‘»" FontSize="48" HorizontalAlignment="Center" Margin="0,0,0,16"/>
                    <TextBlock x:Name="EmptyStateTitle" Text="No Games Found" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center" Foreground="{StaticResource TextPrimaryBrush}"/>
                    <TextBlock x:Name="EmptyStateMessage" Text="Try adjusting your filters or search terms." FontSize="14" HorizontalAlignment="Center" Foreground="{StaticResource TextSecondaryBrush}" Margin="0,8,0,0"/>
                    <Button Content="Clear Filters" Click="ClearSelection_Click" Margin="0,16,0,0" HorizontalAlignment="Center" Style="{StaticResource SecondaryButton}"/>
                </StackPanel>

                <!-- Action Buttons (Floating, Bottom Right) -->
                <StackPanel VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="32" Orientation="Horizontal" Spacing="12">
                     <Button Click="ImportPackageButton_Click" Style="{StaticResource SecondaryButton}" Padding="12,8" Background="#CC161B22" BorderBrush="#30363D">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="ğŸ“¥" Margin="0,0,8,0"/>
                            <TextBlock Text="Import Package"/>
                        </StackPanel>
                    </Button>
                    <Button Click="OpenOutputButton_Click" Style="{StaticResource SecondaryButton}" Padding="12,8" Background="#CC161B22" BorderBrush="#30363D">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="ğŸ“‚" Margin="0,0,8,0"/>
                            <TextBlock Text="Open Output Folder"/>
                        </StackPanel>
                    </Button>
                    <Button Click="BrowsePeerButton_Click" Style="{StaticResource PrimaryButton}" Padding="12,8" Background="#CC238636">
                         <StackPanel Orientation="Horizontal">
                            <TextBlock Text="ğŸŒ" Margin="0,0,8,0"/>
                            <TextBlock Text="Browse Peers"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </Grid>

            <!-- 5. Footer / Status Bar -->
            <Border Grid.Row="4" Background="#090C10" BorderThickness="0,1,0,0" BorderBrush="{StaticResource BorderSubtleBrush}" Padding="12,6">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Orientation="Horizontal">
                        <!-- Spinner (Simple Rotation animation would be ideal here) -->
                        <TextBlock x:Name="StatusText" Text="Ready" FontSize="12" Foreground="{StaticResource TextSecondaryBrush}" VerticalAlignment="Center"/>
                    </StackPanel>

                    <TextBlock Grid.Column="1" Text="v0.5.0-beta" FontSize="11" Foreground="{StaticResource TextMutedBrush}" VerticalAlignment="Center"/>
                </Grid>
            </Border>

            <!-- Overlays -->
            <controls:LoadingOverlay x:Name="LoadingOverlay" Grid.RowSpan="5" Visibility="Collapsed" Panel.ZIndex="100"/>
            <StackPanel x:Name="ToastContainer" Grid.Row="3" VerticalAlignment="Bottom" HorizontalAlignment="Center" Margin="0,0,0,80" Panel.ZIndex="99"/>
        </Grid>
    </Border>
</Window>
