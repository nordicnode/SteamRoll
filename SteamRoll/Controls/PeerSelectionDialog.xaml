<Window x:Class="SteamRoll.Controls.PeerSelectionDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Select Peer" 
        Width="400" Height="350"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="{DynamicResource BackgroundMediumBrush}">
        

    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <TextBlock Grid.Row="0" 
                   Text="Select a peer to send the package to:"
                   Foreground="{DynamicResource TextPrimaryBrush}"
                   FontSize="14"
                   Margin="0,0,0,15"/>
        
        <!-- Peer List -->
        <ListBox x:Name="PeerListBox" 
                 Grid.Row="1"
                 Background="{DynamicResource BackgroundLightBrush}"
                 Foreground="{DynamicResource TextPrimaryBrush}"
                 BorderBrush="{DynamicResource BorderSubtleBrush}"
                 BorderThickness="1"
                 SelectionMode="Single"
                 MouseDoubleClick="PeerListBox_MouseDoubleClick"
                 ItemContainerStyle="{DynamicResource PeerListItemStyle}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal" Margin="8,6">
                        <TextBlock Text="ðŸ–¥ï¸ " FontSize="16" VerticalAlignment="Center"/>
                        <StackPanel Margin="8,0,0,0">
                            <TextBlock Text="{Binding HostName}" FontWeight="SemiBold" FontSize="13"/>
                            <TextBlock Text="{Binding IpAddress}" FontSize="11" Opacity="0.7"/>
                        </StackPanel>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        
        <!-- Buttons -->
        <Grid Grid.Row="2" Margin="0,15,0,0">
            <Button Content="âš¡ Speed Test"
                    HorizontalAlignment="Left"
                    Style="{DynamicResource SecondaryButton}"
                    Padding="10,6"
                    Click="SpeedTestButton_Click"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Cancel"
                        Style="{DynamicResource SecondaryButton}"
                        Width="80"
                        Margin="0,0,10,0"
                        Click="CancelButton_Click"/>
                <Button x:Name="SelectButton"
                        Content="Select"
                        Style="{DynamicResource PrimaryButton}"
                        Width="80"
                        Click="SelectButton_Click"
                        IsEnabled="False"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>

