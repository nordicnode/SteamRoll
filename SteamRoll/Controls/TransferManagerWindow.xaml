<Window x:Class="SteamRoll.Controls.TransferManagerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Transfers" 
        Width="600" Height="500"
        WindowStartupLocation="CenterOwner"
        Background="{DynamicResource BackgroundDarkBrush}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" 
                Background="{DynamicResource BackgroundMediumBrush}"
                BorderBrush="{DynamicResource BorderSubtleBrush}"
                BorderThickness="0,0,0,1"
                Padding="20,16">
            <Grid>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="ðŸ“¡" FontSize="22" VerticalAlignment="Center"/>
                    <TextBlock Text="Transfer Manager"
                               FontSize="18"
                               FontWeight="SemiBold"
                               Foreground="{DynamicResource TextPrimaryBrush}"
                               VerticalAlignment="Center"
                               Margin="12,0,0,0"/>
                </StackPanel>
                
                <Button x:Name="CloseBtn"
                        Content="âœ•"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        Width="32" Height="32"
                        Background="Transparent"
                        Foreground="{DynamicResource TextSecondaryBrush}"
                        BorderThickness="0"
                        FontSize="16"
                        Cursor="Hand"
                        Click="CloseButton_Click"/>
            </Grid>
        </Border>

        <!-- Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="20">
            <StackPanel>
                <!-- Active Transfers Section -->
                <TextBlock Text="Active Transfers"
                           FontSize="14"
                           FontWeight="SemiBold"
                           Foreground="{DynamicResource TextPrimaryBrush}"
                           Margin="0,0,0,12"/>

                <ItemsControl x:Name="ActiveTransfersList">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Background="{DynamicResource BackgroundLightBrush}"
                                    BorderBrush="{DynamicResource BorderSubtleBrush}"
                                    BorderThickness="1"
                                    CornerRadius="8"
                                    Padding="16"
                                    Margin="0,0,0,8">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="60"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- Game Image -->
                                    <Border Grid.Column="0" 
                                            CornerRadius="4" 
                                            Width="50" Height="50">
                                        <Border.Background>
                                            <ImageBrush ImageSource="{Binding HeaderImageUrl}" Stretch="UniformToFill"/>
                                        </Border.Background>
                                    </Border>

                                    <!-- Transfer Info -->
                                    <StackPanel Grid.Column="1" Margin="12,0,0,0">
                                        <Grid>
                                            <TextBlock Text="{Binding GameName}"
                                                       FontSize="14"
                                                       FontWeight="SemiBold"
                                                       Foreground="{DynamicResource TextPrimaryBrush}"
                                                       TextTrimming="CharacterEllipsis"/>
                                            <TextBlock Text="{Binding StatusDisplay}"
                                                       FontSize="12"
                                                       Foreground="{DynamicResource AccentPrimaryBrush}"
                                                       HorizontalAlignment="Right"/>
                                        </Grid>

                                        <!-- Progress Bar -->
                                        <Grid Margin="0,8,0,0">
                                            <ProgressBar Value="{Binding ProgressPercent}"
                                                         Maximum="100"
                                                         Height="6"
                                                         Background="{DynamicResource BackgroundMediumBrush}"
                                                         Foreground="{DynamicResource AccentPrimaryBrush}"/>
                                        </Grid>

                                        <Grid Margin="0,6,0,0">
                                            <TextBlock Text="{Binding ProgressDisplay}"
                                                       FontSize="11"
                                                       Foreground="{DynamicResource TextSecondaryBrush}"/>
                                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                                <TextBlock Text="{Binding SpeedDisplay}"
                                                           FontSize="11"
                                                           Foreground="{DynamicResource TextMutedBrush}"/>
                                                <TextBlock Text=" â€¢ "
                                                           FontSize="11"
                                                           Foreground="{DynamicResource TextMutedBrush}"/>
                                                <TextBlock Text="{Binding TimeRemainingDisplay}"
                                                           FontSize="11"
                                                           Foreground="{DynamicResource TextMutedBrush}"/>
                                            </StackPanel>
                                        </Grid>
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                <!-- Empty state for active transfers -->
                <Border x:Name="NoActiveTransfersPanel"
                        Background="{DynamicResource BackgroundLightBrush}"
                        CornerRadius="8"
                        Padding="30"
                        Margin="0,0,0,24"
                        Visibility="Collapsed">
                    <StackPanel HorizontalAlignment="Center">
                        <TextBlock Text="ðŸ“¡" FontSize="32" HorizontalAlignment="Center" Opacity="0.5"/>
                        <TextBlock Text="No active transfers"
                                   FontSize="13"
                                   Foreground="{DynamicResource TextSecondaryBrush}"
                                   HorizontalAlignment="Center"
                                   Margin="0,8,0,0"/>
                    </StackPanel>
                </Border>

                <!-- History Section -->
                <Grid Margin="0,16,0,12">
                    <TextBlock Text="Transfer History"
                               FontSize="14"
                               FontWeight="SemiBold"
                               Foreground="{DynamicResource TextPrimaryBrush}"/>
                    <Button x:Name="ClearHistoryBtn"
                            Content="Clear History"
                            HorizontalAlignment="Right"
                            Style="{DynamicResource SecondaryButton}"
                            Padding="10,4"
                            FontSize="11"
                            Click="ClearHistory_Click"/>
                </Grid>

                <ItemsControl x:Name="CompletedTransfersList">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Background="{DynamicResource BackgroundCardBrush}"
                                    BorderBrush="{DynamicResource BorderSubtleBrush}"
                                    BorderThickness="1"
                                    CornerRadius="6"
                                    Padding="12"
                                    Margin="0,0,0,6">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="40"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- Game Image -->
                                    <Border Grid.Column="0" 
                                            CornerRadius="4" 
                                            Width="36" Height="36">
                                        <Border.Background>
                                            <ImageBrush ImageSource="{Binding HeaderImageUrl}" Stretch="UniformToFill"/>
                                        </Border.Background>
                                    </Border>

                                    <!-- Transfer Info -->
                                    <StackPanel Grid.Column="1" Margin="10,0,0,0" VerticalAlignment="Center">
                                        <TextBlock Text="{Binding GameName}"
                                                   FontSize="13"
                                                   Foreground="{DynamicResource TextPrimaryBrush}"
                                                   TextTrimming="CharacterEllipsis"/>
                                        <TextBlock FontSize="11"
                                                   Foreground="{DynamicResource TextMutedBrush}">
                                            <Run Text="{Binding DirectionIcon, Mode=OneWay}"/>
                                            <Run Text="{Binding ProgressDisplay, Mode=OneWay}"/>
                                        </TextBlock>
                                    </StackPanel>

                                    <!-- Status -->
                                    <TextBlock Grid.Column="2" 
                                               Text="{Binding StatusDisplay}"
                                               FontSize="12"
                                               VerticalAlignment="Center"/>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                <!-- Empty state for history -->
                <Border x:Name="NoHistoryPanel"
                        Background="{DynamicResource BackgroundCardBrush}"
                        CornerRadius="8"
                        Padding="30"
                        Visibility="Collapsed">
                    <StackPanel HorizontalAlignment="Center">
                        <TextBlock Text="ðŸ“‹" FontSize="28" HorizontalAlignment="Center" Opacity="0.5"/>
                        <TextBlock Text="No transfer history"
                                   FontSize="12"
                                   Foreground="{DynamicResource TextMutedBrush}"
                                   HorizontalAlignment="Center"
                                   Margin="0,6,0,0"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>

        <!-- Footer -->
        <Border Grid.Row="2"
                Background="{DynamicResource BackgroundMediumBrush}"
                BorderBrush="{DynamicResource BorderSubtleBrush}"
                BorderThickness="0,1,0,0"
                Padding="20,12">
            <Grid>
                <TextBlock x:Name="SummaryText"
                           Text="No transfers"
                           FontSize="12"
                           Foreground="{DynamicResource TextSecondaryBrush}"
                           VerticalAlignment="Center"/>
                <Button Content="Close"
                        HorizontalAlignment="Right"
                        Style="{DynamicResource SecondaryButton}"
                        Padding="16,8"
                        Click="CloseButton_Click"/>
            </Grid>
        </Border>
    </Grid>
</Window>
