<Window x:Class="SteamRoll.Controls.RemoteLibraryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Remote Library" Height="600" Width="800"
        WindowStartupLocation="CenterOwner"
        Background="#18181B"
        Foreground="White">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock x:Name="TitleText" Text="Browsing Library..." FontSize="24" FontWeight="SemiBold"/>
            <TextBlock x:Name="SubtitleText" Text="Connecting to peer..." FontSize="14" Foreground="#A1A1AA" Margin="0,4,0,0"/>
        </StackPanel>

        <ListView x:Name="GamesList" Grid.Row="1" Background="#27272A" BorderThickness="0" Foreground="White" SelectionMode="Single">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Game" Width="350">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Name}" Padding="5"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn Header="Size" Width="100">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding SizeDisplay}" Padding="5"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn Header="Action" Width="120">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <Button Content="Download" Click="DownloadButton_Click" Tag="{Binding}"
                                        Background="#238636" Foreground="White" BorderThickness="0" Padding="10,4" Cursor="Hand"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                </GridView>
            </ListView.View>
        </ListView>

        <Button Grid.Row="2" Content="Close" Click="CloseButton_Click" HorizontalAlignment="Right" Margin="0,16,0,0"
                Background="#3F3F46" Foreground="White" BorderThickness="0" Padding="20,8"/>
    </Grid>
</Window>
