<Window x:Class="SteamRoll.Controls.RestorePointDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Create Restore Point"
        Width="420" Height="400"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="Transparent"
        ShowInTaskbar="False"
        WindowStyle="None"
        AllowsTransparency="True">
    
    <Window.Resources>
        <Style x:Key="QuickNameButton" TargetType="Button">
            <Setter Property="Background" Value="#21262D"/>
            <Setter Property="Foreground" Value="#8B949E"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#30363D"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#30363D"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="#58A6FF"/>
                                <Setter Property="Foreground" Value="#F0F6FC"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    
    <Border Background="#0D1117" CornerRadius="8" BorderBrush="#30363D" BorderThickness="1">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            
            <!-- Title Bar (draggable) -->
            <Border Grid.Row="0" Background="#161B22" CornerRadius="8,8,0,0" 
                    MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
                <Grid>
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="16,0">
                        <TextBlock Text="â±ï¸" FontSize="14" VerticalAlignment="Center" Margin="0,0,8,0" FontFamily="Segoe UI Emoji"/>
                        <TextBlock Text="Create Restore Point" Foreground="#F0F6FC" FontWeight="SemiBold" FontSize="14" VerticalAlignment="Center"/>
                    </StackPanel>
                    <Button Content="âœ•" 
                            HorizontalAlignment="Right" 
                            VerticalAlignment="Center"
                            Margin="0,0,8,0"
                            Width="28" Height="28"
                            Click="Cancel_Click"
                            Background="Transparent"
                            Foreground="#8B949E"
                            BorderThickness="0"
                            FontSize="14"
                            Cursor="Hand">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="4">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="border" Property="Background" Value="#F85149"/>
                                        <Setter Property="Foreground" Value="White"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </Grid>
            </Border>
            
            <!-- Main Content -->
            <Grid Grid.Row="1" Margin="20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <!-- Subtitle -->
                <TextBlock Grid.Row="0" Text="Save a snapshot of your current game saves" FontSize="12" 
                           Foreground="#8B949E" Margin="0,0,0,16"/>
                
                <!-- Form -->
                <StackPanel Grid.Row="1">
                    <TextBlock Text="Name" FontSize="13" Foreground="#C9D1D9" Margin="0,0,0,6"/>
                    <TextBox x:Name="NameBox" Text="" FontSize="13" Margin="0,0,0,12"
                             Background="#161B22" Foreground="White" BorderBrush="#30363D"
                             Padding="12,10" BorderThickness="1" MaxLength="50"
                             TextChanged="NameBox_TextChanged">
                        <TextBox.Template>
                            <ControlTemplate TargetType="TextBox">
                                <Border x:Name="border" Background="{TemplateBinding Background}" 
                                        BorderBrush="{TemplateBinding BorderBrush}" 
                                        BorderThickness="{TemplateBinding BorderThickness}"
                                        CornerRadius="6">
                                    <ScrollViewer x:Name="PART_ContentHost" Margin="{TemplateBinding Padding}"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsFocused" Value="True">
                                        <Setter TargetName="border" Property="BorderBrush" Value="#58A6FF"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </TextBox.Template>
                    </TextBox>
                    
                    <!-- Quick Suggestions -->
                    <TextBlock Text="Quick names:" FontSize="11" Foreground="#6E7681" Margin="0,0,0,6"/>
                    <WrapPanel Margin="0,0,0,16">
                        <Button Content="Pre-Raid" Tag="Pre-Raid" Click="QuickName_Click" Style="{StaticResource QuickNameButton}" Margin="0,0,6,6"/>
                        <Button Content="Safe Point" Tag="Safe Point" Click="QuickName_Click" Style="{StaticResource QuickNameButton}" Margin="0,0,6,6"/>
                        <Button Content="Before Boss" Tag="Before Boss" Click="QuickName_Click" Style="{StaticResource QuickNameButton}" Margin="0,0,6,6"/>
                        <Button Content="New Session" Tag="New Session" Click="QuickName_Click" Style="{StaticResource QuickNameButton}" Margin="0,0,6,6"/>
                    </WrapPanel>
                    
                    <!-- Pin Checkbox -->
                    <CheckBox x:Name="PinCheckBox" Foreground="#C9D1D9" Margin="0,0,0,8">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="ðŸ“Œ" FontFamily="Segoe UI Emoji" Margin="0,0,6,0"/>
                            <TextBlock Text="Pin this restore point (won't auto-delete)"/>
                        </StackPanel>
                    </CheckBox>
                </StackPanel>
                
                <!-- Buttons -->
                <Border Grid.Row="2" Background="#161B22" CornerRadius="6" Padding="16,12" Margin="0,16,0,0">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <Button Grid.Column="1" Content="Cancel" Padding="20,10" Margin="0,0,10,0"
                                Background="#21262D" Foreground="#C9D1D9" BorderThickness="1" BorderBrush="#30363D"
                                Cursor="Hand" Click="Cancel_Click">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border x:Name="border" Background="{TemplateBinding Background}" 
                                            BorderBrush="{TemplateBinding BorderBrush}"
                                            BorderThickness="{TemplateBinding BorderThickness}"
                                            CornerRadius="6" Padding="{TemplateBinding Padding}">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="border" Property="Background" Value="#30363D"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                        
                        <Button x:Name="CreateButton" Grid.Column="2" Content="Create" Padding="20,10"
                                Background="#238636" Foreground="White" BorderThickness="0" 
                                FontWeight="SemiBold" Cursor="Hand" Click="Create_Click" IsEnabled="False">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="6" Padding="{TemplateBinding Padding}">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="border" Property="Background" Value="#2EA043"/>
                                        </Trigger>
                                        <Trigger Property="IsEnabled" Value="False">
                                            <Setter TargetName="border" Property="Opacity" Value="0.5"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                    </Grid>
                </Border>
            </Grid>
        </Grid>
    </Border>
</Window>
