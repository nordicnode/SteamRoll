<UserControl x:Class="SteamRoll.Controls.GameDetailsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="1200"
             Background="{DynamicResource BackgroundDarkBrush}">


    
    <Grid>
        <!-- Background Image -->
        <Image x:Name="BackgroundImage" Stretch="UniformToFill" Opacity="0.12"
               HorizontalAlignment="Center" VerticalAlignment="Top" Height="400"/>
        
        <!-- Dark Gradient Overlay -->
        <Border VerticalAlignment="Top" Height="400">
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                    <GradientStop Color="#880D1117" Offset="0"/>
                    <GradientStop Color="#FF0D1117" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>
        </Border>
        
        <!-- Scrollable Content -->
        <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="0">
            <Grid Margin="40,20,40,40" x:Name="ContentGrid" Opacity="0">
                <Grid.RenderTransform>
                    <TranslateTransform x:Name="ContentTranslate" Y="20"/>
                </Grid.RenderTransform>
                <!-- Opacity is set to 0 initially, animated in code-behind -->
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <!-- Back Button -->
                <Button Grid.Row="0" x:Name="BackButton" HorizontalAlignment="Left" 
                        Style="{DynamicResource SecondaryButton}" Margin="0,0,0,20"
                        Click="BackButton_Click">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="â† Back to Library" FontSize="13"/>
                    </StackPanel>
                </Button>
                
                <!-- Hero Section: Large Header with Title -->
                <Grid Grid.Row="1" Margin="0,0,0,32">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="460"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- Large Header Image -->
                    <Border Grid.Column="0" CornerRadius="12" Height="215" 
                            BorderBrush="{DynamicResource BorderSubtleBrush}" BorderThickness="1">
                        <Border.Effect>
                            <DropShadowEffect BlurRadius="20" ShadowDepth="5" Opacity="0.5" Color="Black"/>
                        </Border.Effect>
                        <Border.Background>
                            <ImageBrush x:Name="HeaderImageBrush" Stretch="UniformToFill"/>
                        </Border.Background>
                    </Border>
                    
                    <!-- Title and Meta Info -->
                    <StackPanel Grid.Column="1" Margin="32,0,0,0" VerticalAlignment="Center">
                        <TextBlock x:Name="GameTitle" Text="Game Name" FontSize="38" FontWeight="Bold" 
                                   Foreground="{DynamicResource TextPrimaryBrush}" TextWrapping="Wrap"
                                   Margin="0,0,0,8"/>
                        
                        <!-- Genres -->
                        <TextBlock x:Name="GenresText" Text="Action â€¢ Adventure â€¢ RPG" FontSize="15" 
                                   Foreground="{DynamicResource AccentSecondaryBrush}" Margin="0,0,0,16"/>
                        
                        <!-- Meta Row -->
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                            <TextBlock x:Name="DeveloperText" Text="Developer: Unknown" FontSize="13" 
                                       Foreground="{DynamicResource TextSecondaryBrush}" Margin="0,0,24,0"/>
                            <TextBlock x:Name="ReleaseDateText" Text="Released: Unknown" FontSize="13" 
                                       Foreground="{DynamicResource TextSecondaryBrush}"/>
                        </StackPanel>
                        
                        <!-- Badges Row -->
                        <WrapPanel Margin="0,0,0,20">
                            <Border Background="#21262D" CornerRadius="6" Padding="12,6" Margin="0,0,10,8">
                                <TextBlock x:Name="AppIdText" Text="#12345" FontSize="12" 
                                           Foreground="{DynamicResource TextSecondaryBrush}"/>
                            </Border>
                            <Border Background="#21262D" CornerRadius="6" Padding="12,6" Margin="0,0,10,8">
                                <TextBlock x:Name="SizeText" Text="0 GB" FontSize="12" 
                                           Foreground="{DynamicResource TextSecondaryBrush}"/>
                            </Border>
                            <!-- Update Available Badge -->
                            <Border CornerRadius="6" Padding="12,6" Margin="0,0,10,8">
                                <Border.Style>
                                    <Style TargetType="Border">
                                        <Setter Property="Background" Value="#3E2C1A"/>
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding UpdateAvailable}" Value="True">
                                                <Setter Property="Visibility" Value="Visible"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Border.Style>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="ðŸ”„" FontSize="12" Margin="0,0,6,0" FontFamily="Segoe UI Emoji"/>
                                    <TextBlock Text="Update Available" FontSize="12" FontWeight="SemiBold" Foreground="#D29922"/>
                                </StackPanel>
                            </Border>
                            <Border x:Name="SteamReviewsBadge" CornerRadius="6" Padding="12,6" Margin="0,0,10,8"
                                    Visibility="Collapsed" Cursor="Hand">
                                <Border.Background>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                        <GradientStop Color="#21262D" Offset="0"/>
                                        <GradientStop Color="#2A3441" Offset="1"/>
                                    </LinearGradientBrush>
                                </Border.Background>
                                <Border.Style>
                                    <Style TargetType="Border">
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="BorderBrush" Value="{DynamicResource AccentPrimaryBrush}"/>
                                                <Setter Property="BorderThickness" Value="1"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Border.Style>
                                <StackPanel Orientation="Horizontal">
                                    <Path Data="{DynamicResource IconThumbsUp}" Width="12" Height="12" Margin="0,0,6,0"
                                          Fill="{DynamicResource SuccessBrush}" Stretch="Uniform"/>
                                    <TextBlock x:Name="ReviewDescriptionText" Text="Very Positive" FontSize="12" FontWeight="SemiBold"/>
                                    <TextBlock x:Name="ReviewPercentText" Text=" (95%)" FontSize="12" FontWeight="SemiBold"/>
                                </StackPanel>
                            </Border>
                            <Border x:Name="MetacriticBadge" CornerRadius="6" Padding="12,6" Margin="0,0,10,8"
                                    Visibility="Collapsed" Cursor="Hand">
                                <Border.Background>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                        <GradientStop Color="#21262D" Offset="0"/>
                                        <GradientStop Color="#2A3441" Offset="1"/>
                                    </LinearGradientBrush>
                                </Border.Background>
                                <Border.Style>
                                    <Style TargetType="Border">
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="BorderBrush" Value="{DynamicResource AccentSecondaryBrush}"/>
                                                <Setter Property="BorderThickness" Value="1"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Border.Style>
                                <StackPanel Orientation="Horizontal">
                                    <Border Width="18" Height="18" CornerRadius="3" Margin="0,0,8,0" VerticalAlignment="Center">
                                        <Border.Background>
                                            <SolidColorBrush x:Name="MetacriticBg" Color="#3FB950"/>
                                        </Border.Background>
                                        <TextBlock x:Name="MetacriticScore" Text="M" FontSize="11" FontWeight="Bold" 
                                                   Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                    <TextBlock x:Name="MetacriticText" Text="85" FontSize="12" FontWeight="Bold"/>
                                </StackPanel>
                            </Border>
                            <!-- Compatibility Badge -->
                            <Border x:Name="CompatBadge" CornerRadius="6" Padding="12,6" Margin="0,0,0,8">
                                <StackPanel Orientation="Horizontal">
                                    <Ellipse x:Name="CompatDot" Width="10" Height="10" Fill="#3FB950" Margin="0,0,8,0"/>
                                    <TextBlock x:Name="CompatText" Text="Compatible" FontSize="12" FontWeight="SemiBold"
                                               Foreground="{DynamicResource TextPrimaryBrush}"/>
                                </StackPanel>
                            </Border>
                        </WrapPanel>
                        
                        <!-- Action Buttons -->
                        <StackPanel Orientation="Horizontal">
                            <Button x:Name="PackageBtn" Style="{DynamicResource PrimaryButton}" 
                                    Width="200" Height="44" Margin="0,0,12,0" Click="Package_Click">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="ðŸ“¦" FontSize="16" Margin="0,0,8,0" FontFamily="Segoe UI Emoji"/>
                                    <TextBlock x:Name="PackageBtnText" Text="Build" FontSize="14"/>
                                </StackPanel>
                            </Button>
                            <ComboBox x:Name="EmulatorModeCombo" Width="160" Height="38" VerticalContentAlignment="Center">
                                <ComboBoxItem Content="ðŸŽ® Goldberg" Tag="Goldberg" IsSelected="True"/>
                                <ComboBoxItem Content="ðŸ”“ CreamAPI" Tag="CreamApi"/>
                            </ComboBox>
                            <Button x:Name="VerifyIntegrityBtn" Style="{DynamicResource SecondaryButton}" 
                                    Height="38" Margin="12,0,0,0" Click="VerifyIntegrity_Click"
                                    Visibility="Collapsed">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="ðŸ”" FontSize="14" Margin="0,0,6,0" FontFamily="Segoe UI Emoji"/>
                                    <TextBlock Text="Verify Integrity" FontSize="13"/>
                                </StackPanel>
                            </Button>
                            <Button x:Name="SyncSavesBtn" Style="{DynamicResource SecondaryButton}" 
                                    Height="38" Margin="12,0,0,0" Click="SyncSaves_Click"
                                    Visibility="Collapsed" ToolTip="Sync game saves with LAN peers">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="ðŸ”„" FontSize="14" Margin="0,0,6,0" FontFamily="Segoe UI Emoji"/>
                                    <TextBlock Text="Sync Saves" FontSize="13"/>
                                </StackPanel>
                            </Button>
                            <Button x:Name="RepairEnvBtn" Style="{DynamicResource SecondaryButton}" 
                                    Height="38" Margin="12,0,0,0" Click="RepairEnvironment_Click"
                                    ToolTip="Detect and install missing runtime dependencies (VC++ redistributables, etc.)">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="ðŸ”§" FontSize="14" Margin="0,0,6,0" FontFamily="Segoe UI Emoji"/>
                                    <TextBlock Text="Repair" FontSize="13"/>
                                </StackPanel>
                            </Button>
                        </StackPanel>
                    </StackPanel>
                </Grid>
                
                <!-- Trailer Section (when available) -->
                <Border Grid.Row="2" x:Name="TrailerSection" Background="{DynamicResource BackgroundCardBrush}" 
                        CornerRadius="12" Padding="24" Margin="0,0,0,24" 
                        BorderBrush="{DynamicResource BorderSubtleBrush}" BorderThickness="1"
                        Visibility="Collapsed">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                            <Path Data="{DynamicResource IconPlay}" Width="18" Height="18" Margin="0,0,10,0"
                                  Fill="{DynamicResource AccentPrimaryBrush}" Stretch="Uniform" VerticalAlignment="Center"/>
                            <TextBlock Text="Trailer" FontSize="18" FontWeight="SemiBold"
                                       Foreground="{DynamicResource TextPrimaryBrush}" VerticalAlignment="Center"/>
                        </StackPanel>
                        <Border CornerRadius="8" Height="360" Background="#000">
                            <MediaElement x:Name="TrailerPlayer" LoadedBehavior="Manual" 
                                          UnloadedBehavior="Stop" Stretch="Uniform"/>
                        </Border>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,12,0,0">
                            <Button Content="â–¶ Play" Style="{DynamicResource SecondaryButton}" 
                                    Width="100" Margin="0,0,8,0" Click="PlayTrailer_Click"/>
                            <Button Content="â¹ Stop" Style="{DynamicResource SecondaryButton}" 
                                    Width="100" Click="StopTrailer_Click"/>
                        </StackPanel>
                    </StackPanel>
                </Border>
                
                <!-- Screenshots Section -->
                <Border Grid.Row="3" Background="{DynamicResource BackgroundCardBrush}" CornerRadius="12" 
                        Padding="24" Margin="0,0,0,24" BorderBrush="{DynamicResource BorderSubtleBrush}" BorderThickness="1">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                            <Path Data="{DynamicResource IconMedia}" Width="18" Height="18" Margin="0,0,10,0"
                                  Fill="{DynamicResource AccentPrimaryBrush}" Stretch="Uniform" VerticalAlignment="Center"/>
                            <TextBlock Text="Screenshots" FontSize="18" FontWeight="SemiBold"
                                       Foreground="{DynamicResource TextPrimaryBrush}" VerticalAlignment="Center"/>
                        </StackPanel>
                        <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Disabled">
                            <ItemsControl x:Name="ScreenshotsList">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <StackPanel Orientation="Horizontal"/>
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border x:Name="ScreenshotBorder" CornerRadius="8" Margin="0,0,16,0" Width="400" Height="225" 
                                                Cursor="Hand" MouseLeftButtonUp="Screenshot_Click" Tag="{Binding}"
                                                BorderBrush="{DynamicResource BorderSubtleBrush}" BorderThickness="1"
                                                RenderTransformOrigin="0.5,0.5">
                                            <Border.RenderTransform>
                                                <ScaleTransform ScaleX="1" ScaleY="1"/>
                                            </Border.RenderTransform>
                                            <Border.Effect>
                                                <DropShadowEffect BlurRadius="10" ShadowDepth="3" Opacity="0.4" Color="Black"/>
                                            </Border.Effect>
                                            <Border.Background>
                                                <ImageBrush ImageSource="{Binding}" Stretch="UniformToFill"/>
                                            </Border.Background>
                                            <Border.Style>
                                                <Style TargetType="Border">
                                                    <Style.Triggers>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter Property="BorderBrush" Value="{DynamicResource AccentPrimaryBrush}"/>
                                                            <Setter Property="RenderTransform">
                                                                <Setter.Value>
                                                                    <ScaleTransform ScaleX="1.02" ScaleY="1.02"/>
                                                                </Setter.Value>
                                                            </Setter>
                                                            <Setter Property="Effect">
                                                                <Setter.Value>
                                                                    <DropShadowEffect BlurRadius="20" ShadowDepth="6" Opacity="0.5" Color="#58A6FF"/>
                                                                </Setter.Value>
                                                            </Setter>
                                                        </Trigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Border.Style>
                                            <!-- Gradient overlay for premium look -->
                                            <Border CornerRadius="8">
                                                <Border.Background>
                                                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                                        <GradientStop Color="#00000000" Offset="0.7"/>
                                                        <GradientStop Color="#40000000" Offset="1"/>
                                                    </LinearGradientBrush>
                                                </Border.Background>
                                            </Border>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>
                        <TextBlock x:Name="NoScreenshotsText" Text="No screenshots available" 
                                   Foreground="{DynamicResource TextMutedBrush}" FontStyle="Italic"
                                   Visibility="Collapsed" Margin="0,8,0,0"/>
                    </StackPanel>
                </Border>
                
                <!-- Two Column Layout: Description + Sidebar -->
                <Grid Grid.Row="4">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="380"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- Left: Description and Features -->
                    <StackPanel Grid.Column="0" Margin="0,0,24,0">
                        <!-- About -->
                        <Border Background="{DynamicResource BackgroundCardBrush}" CornerRadius="12" 
                                Padding="24" Margin="0,0,0,24" BorderBrush="{DynamicResource BorderSubtleBrush}" BorderThickness="1">
                            <StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                                    <Path Data="{DynamicResource IconBook}" Width="18" Height="18" Margin="0,0,10,0"
                                          Fill="{DynamicResource AccentPrimaryBrush}" Stretch="Uniform" VerticalAlignment="Center"/>
                                    <TextBlock Text="About This Game" FontSize="18" FontWeight="SemiBold"
                                               Foreground="{DynamicResource TextPrimaryBrush}" VerticalAlignment="Center"/>
                                </StackPanel>
                                <TextBlock x:Name="DescriptionText" TextWrapping="Wrap" FontSize="14" LineHeight="24"
                                           Foreground="{DynamicResource TextSecondaryBrush}" 
                                           Text="Loading game description..."/>
                            </StackPanel>
                        </Border>
                        
                        <!-- Features -->
                        <Border Background="{DynamicResource BackgroundCardBrush}" CornerRadius="12" 
                                Padding="24" BorderBrush="{DynamicResource BorderSubtleBrush}" BorderThickness="1">
                            <StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                                    <Path Data="{DynamicResource IconSparkle}" Width="18" Height="18" Margin="0,0,10,0"
                                          Fill="{DynamicResource AccentSecondaryBrush}" Stretch="Uniform" VerticalAlignment="Center"/>
                                    <TextBlock Text="Features" FontSize="18" FontWeight="SemiBold"
                                               Foreground="{DynamicResource TextPrimaryBrush}" VerticalAlignment="Center"/>
                                </StackPanel>
                                <ItemsControl x:Name="FeaturesList">
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <WrapPanel/>
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border Background="{DynamicResource AccentPrimaryBrush}" Opacity="0.9"
                                                    CornerRadius="6" Padding="14,8" Margin="0,0,10,10">
                                                <TextBlock Text="{Binding}" FontSize="12" FontWeight="Medium"
                                                           Foreground="White"/>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                    
                    <!-- Right: DRM, DLC, Links -->
                    <StackPanel Grid.Column="1">
                        <!-- DRM Analysis -->
                        <Border Background="{DynamicResource BackgroundCardBrush}" CornerRadius="12" 
                                Padding="24" Margin="0,0,0,20" BorderBrush="{DynamicResource BorderSubtleBrush}" BorderThickness="1">
                            <StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                                    <Path Data="{DynamicResource IconLock}" Width="18" Height="18" Margin="0,0,10,0"
                                          Fill="{DynamicResource WarningBrush}" Stretch="Uniform" VerticalAlignment="Center"/>
                                    <TextBlock Text="Compatibility" FontSize="18" FontWeight="SemiBold"
                                               Foreground="{DynamicResource TextPrimaryBrush}" VerticalAlignment="Center"/>
                                </StackPanel>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="110"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    
                                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Primary DRM:" FontSize="13"
                                               Foreground="{DynamicResource TextSecondaryBrush}" Margin="0,6"/>
                                    <TextBlock Grid.Row="0" Grid.Column="1" x:Name="PrimaryDrmText" Text="SteamStub" FontSize="13"
                                               Foreground="{DynamicResource SuccessBrush}" FontWeight="SemiBold" Margin="0,6"/>
                                    
                                    <TextBlock Grid.Row="1" Grid.Column="0" Text="Compat Score:" FontSize="13"
                                               Foreground="{DynamicResource TextSecondaryBrush}" Margin="0,6"/>
                                    <StackPanel Grid.Row="1" Grid.Column="1" Margin="0,6">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <!-- Progress bar track -->
                                            <Border Grid.Column="0" Height="8" CornerRadius="4" Background="#21262D" Margin="0,0,10,0">
                                                <Border x:Name="CompatProgressBar" HorizontalAlignment="Left" Height="8" CornerRadius="4" Width="100">
                                                    <Border.Background>
                                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                                            <GradientStop Color="#3FB950" Offset="0"/>
                                                            <GradientStop Color="#58A6FF" Offset="1"/>
                                                        </LinearGradientBrush>
                                                    </Border.Background>
                                                </Border>
                                            </Border>
                                            <!-- Percentage text -->
                                            <TextBlock Grid.Column="1" x:Name="CompatScoreText" Text="100%" FontSize="12"
                                                       Foreground="{DynamicResource SuccessBrush}" FontWeight="SemiBold"/>
                                        </Grid>
                                    </StackPanel>
                                    
                                    <TextBlock Grid.Row="2" Grid.Column="0" Text="Status:" FontSize="13"
                                               Foreground="{DynamicResource TextSecondaryBrush}" Margin="0,6"/>
                                    <TextBlock Grid.Row="2" Grid.Column="1" x:Name="StatusReasonText" FontSize="13"
                                               Text="Ready to package" TextWrapping="Wrap"
                                               Foreground="{DynamicResource TextSecondaryBrush}" Margin="0,6"/>
                                </Grid>
                            </StackPanel>
                        </Border>
                        
                        <!-- DLC Section -->
                        <Border Background="{DynamicResource BackgroundCardBrush}" CornerRadius="12" 
                                Padding="24" Margin="0,0,0,20" BorderBrush="{DynamicResource BorderSubtleBrush}" BorderThickness="1">
                            <StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                                    <Path Data="{DynamicResource IconGift}" Width="18" Height="18" Margin="0,0,10,0"
                                          Fill="{DynamicResource AccentTertiaryBrush}" Stretch="Uniform" VerticalAlignment="Center"/>
                                    <TextBlock Text="Add-ons" FontSize="18" FontWeight="SemiBold"
                                               Foreground="{DynamicResource TextPrimaryBrush}" VerticalAlignment="Center"/>
                                    <TextBlock x:Name="DlcCountText" Text=" (0 available)" FontSize="14"
                                               Foreground="{DynamicResource TextMutedBrush}" VerticalAlignment="Center" Margin="4,0,0,0"/>
                                </StackPanel>
                                <ScrollViewer MaxHeight="280" VerticalScrollBarVisibility="Auto">
                                    <ItemsControl x:Name="DlcList">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Border CornerRadius="8" Padding="14,12" Margin="0,0,0,8"
                                                        BorderThickness="1"
                                                        Style="{DynamicResource DlcItemBorderStyle}">
                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="*"/>
                                                            <ColumnDefinition Width="Auto"/>
                                                        </Grid.ColumnDefinitions>
                                                        <TextBlock Grid.Column="0" Text="{Binding Name}" FontSize="13"
                                                                   Foreground="{DynamicResource TextPrimaryBrush}" 
                                                                   TextTrimming="CharacterEllipsis" VerticalAlignment="Center"/>
                                                        <Border Grid.Column="1" CornerRadius="4" Padding="8,4" VerticalAlignment="Center"
                                                                Style="{DynamicResource DlcStatusBadgeStyle}">
                                                            <TextBlock FontSize="11" FontWeight="Medium"
                                                                       Style="{DynamicResource DlcStatusTextStyle}"/>
                                                        </Border>
                                                    </Grid>
                                                </Border>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </ScrollViewer>
                                <TextBlock x:Name="NoDlcText" Text="No DLC available for this game" 
                                           Foreground="{DynamicResource TextMutedBrush}" FontStyle="Italic"
                                           Visibility="Collapsed"/>
                            </StackPanel>
                        </Border>
                        
                        <!-- Links -->
                        <Border Background="{DynamicResource BackgroundCardBrush}" CornerRadius="12" 
                                Padding="24" BorderBrush="{DynamicResource BorderSubtleBrush}" BorderThickness="1">
                            <StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                                    <Path Data="{DynamicResource IconLink}" Width="18" Height="18" Margin="0,0,10,0"
                                          Fill="{DynamicResource AccentPrimaryBrush}" Stretch="Uniform" VerticalAlignment="Center"/>
                                    <TextBlock Text="Links" FontSize="18" FontWeight="SemiBold"
                                               Foreground="{DynamicResource TextPrimaryBrush}" VerticalAlignment="Center"/>
                                </StackPanel>
                                <Button Style="{DynamicResource SecondaryButton}" 
                                        Height="38" Margin="0,0,0,10" Click="OpenSteamStore_Click">
                                    <StackPanel Orientation="Horizontal">
                                        <Path Data="{DynamicResource IconSteam}" Width="16" Height="16" Margin="0,0,8,0"
                                              Fill="{DynamicResource TextSecondaryBrush}" Stretch="Uniform"/>
                                        <TextBlock Text="View on Steam Store" VerticalAlignment="Center"/>
                                    </StackPanel>
                                </Button>
                                <Button Style="{DynamicResource SecondaryButton}" 
                                        Height="38" Click="OpenSteamDb_Click">
                                    <StackPanel Orientation="Horizontal">
                                        <Path Data="{DynamicResource IconExternalLink}" Width="14" Height="14" Margin="0,0,8,0"
                                              Fill="{DynamicResource TextSecondaryBrush}" Stretch="Uniform"/>
                                        <TextBlock Text="View on SteamDB" VerticalAlignment="Center"/>
                                    </StackPanel>
                                </Button>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Grid>
            </Grid>
        </ScrollViewer>
        
        <!-- Loading Overlay -->
        <Border x:Name="LoadingOverlay" Background="#EE0D1117" Visibility="Visible">
            <!-- Subtle gradient background -->
            <Grid>
                <Rectangle>
                    <Rectangle.Fill>
                        <RadialGradientBrush Center="0.5,0.5" RadiusX="0.5" RadiusY="0.5">
                            <GradientStop Color="#1558A6FF" Offset="0"/>
                            <GradientStop Color="#00000000" Offset="1"/>
                        </RadialGradientBrush>
                    </Rectangle.Fill>
                </Rectangle>
                
                <!-- Centered card -->
                <Border HorizontalAlignment="Center" VerticalAlignment="Center"
                        Background="#2A161B22" CornerRadius="16" Padding="40,32"
                        BorderBrush="#3058A6FF" BorderThickness="1">
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="30" ShadowDepth="0" Opacity="0.3" Color="#58A6FF"/>
                    </Border.Effect>
                    
                    <StackPanel HorizontalAlignment="Center">
                        <!-- Animated spinner ring -->
                        <Grid Width="80" Height="80" Margin="0,0,0,24">
                            <!-- Background glow -->
                            <Ellipse Width="60" Height="60" Opacity="0.3">
                                <Ellipse.Fill>
                                    <RadialGradientBrush Center="0.5,0.5">
                                        <GradientStop Color="#58A6FF" Offset="0"/>
                                        <GradientStop Color="#00000000" Offset="1"/>
                                    </RadialGradientBrush>
                                </Ellipse.Fill>
                            </Ellipse>
                            
                            <!-- Outer track -->
                            <Ellipse Width="64" Height="64" StrokeThickness="3" Stroke="#20FFFFFF"
                                     HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            
                            <!-- Spinning ring -->
                            <Ellipse x:Name="SpinnerRing" Width="64" Height="64" StrokeThickness="3"
                                     HorizontalAlignment="Center" VerticalAlignment="Center">
                                <Ellipse.Stroke>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                        <GradientStop Color="#58A6FF" Offset="0"/>
                                        <GradientStop Color="#A371F7" Offset="0.5"/>
                                        <GradientStop Color="Transparent" Offset="1"/>
                                    </LinearGradientBrush>
                                </Ellipse.Stroke>
                                <Ellipse.RenderTransform>
                                    <RotateTransform x:Name="SpinnerTransform" CenterX="32" CenterY="32"/>
                                </Ellipse.RenderTransform>
                                <Ellipse.Triggers>
                                    <EventTrigger RoutedEvent="Loaded">
                                        <BeginStoryboard>
                                            <Storyboard RepeatBehavior="Forever">
                                                <DoubleAnimation Storyboard.TargetName="SpinnerTransform"
                                                                 Storyboard.TargetProperty="Angle"
                                                                 From="0" To="360" Duration="0:0:1.2">
                                                    <DoubleAnimation.EasingFunction>
                                                        <SineEase EasingMode="EaseInOut"/>
                                                    </DoubleAnimation.EasingFunction>
                                                </DoubleAnimation>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </EventTrigger>
                                </Ellipse.Triggers>
                            </Ellipse>
                            
                            <!-- Center icon -->
                            <Border Width="40" Height="40" CornerRadius="20" 
                                    HorizontalAlignment="Center" VerticalAlignment="Center">
                                <Border.Background>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                        <GradientStop Color="#2058A6FF" Offset="0"/>
                                        <GradientStop Color="#20A371F7" Offset="1"/>
                                    </LinearGradientBrush>
                                </Border.Background>
                                <TextBlock Text="ðŸŽ®" FontSize="20" FontFamily="Segoe UI Emoji"
                                           HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </Grid>
                        
                        <!-- Loading text -->
                        <TextBlock Text="Loading game data..." FontSize="16" FontWeight="SemiBold"
                                   Foreground="#F0F6FC" HorizontalAlignment="Center"/>
                        <TextBlock Text="Fetching details from Steam..." FontSize="13"
                                   Foreground="#8B949E" HorizontalAlignment="Center" Margin="0,6,0,0"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>
    </Grid>
</UserControl>

