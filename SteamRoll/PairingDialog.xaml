<Window x:Class="SteamRoll.PairingDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Device Pairing"
        Width="420" Height="460"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="Transparent"
        ShowInTaskbar="False"
        WindowStyle="None"
        AllowsTransparency="True">
    
    <Border Background="#0D1117" CornerRadius="8" BorderBrush="#30363D" BorderThickness="1">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            
            <!-- Title Bar (draggable) -->
            <Border Grid.Row="0" Background="#161B22" CornerRadius="8,8,0,0" 
                    MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
                <Grid>
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="16,0">
                        <TextBlock Text="ðŸ”" FontSize="14" VerticalAlignment="Center" Margin="0,0,8,0" FontFamily="Segoe UI Emoji"/>
                        <TextBlock Text="Device Pairing" Foreground="#F0F6FC" FontWeight="SemiBold" FontSize="14" VerticalAlignment="Center"/>
                    </StackPanel>
                    <Button Content="âœ•" 
                            HorizontalAlignment="Right" 
                            VerticalAlignment="Center"
                            Margin="0,0,8,0"
                            Width="28" Height="28"
                            Click="Cancel_Click"
                            Background="Transparent"
                            Foreground="#8B949E"
                            BorderThickness="0"
                            FontSize="14"
                            Cursor="Hand">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="4">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="border" Property="Background" Value="#F85149"/>
                                        <Setter Property="Foreground" Value="White"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </Grid>
            </Border>
            
            <!-- Main Content -->
            <Grid Grid.Row="1" Margin="20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <!-- Subtitle -->
                <TextBlock Grid.Row="0" Text="Connect securely with another device" FontSize="12" 
                           Foreground="#8B949E" Margin="0,0,0,16"/>
                
                <!-- Content -->
                <StackPanel Grid.Row="1">
                    
                    <!-- Mode Tabs -->
                    <Grid Margin="0,0,0,20">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <Button x:Name="ShowCodeTab" Grid.Column="0" Content="Show My Code" 
                                Click="ShowCodeTab_Click" Cursor="Hand"
                                Background="#A371F7" Foreground="White" BorderThickness="0"
                                Padding="12,10" FontWeight="SemiBold">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border x:Name="border" Background="{TemplateBinding Background}" 
                                            CornerRadius="6,0,0,6" Padding="{TemplateBinding Padding}">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                        
                        <Button x:Name="EnterCodeTab" Grid.Column="1" Content="Enter Code" 
                                Click="EnterCodeTab_Click" Cursor="Hand"
                                Background="#21262D" Foreground="#C9D1D9" BorderThickness="0"
                                Padding="12,10">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border x:Name="border" Background="{TemplateBinding Background}" 
                                            CornerRadius="0,6,6,0" Padding="{TemplateBinding Padding}">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="border" Property="Background" Value="#30363D"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                    </Grid>
                    
                    <!-- Show Code Panel -->
                    <StackPanel x:Name="ShowCodePanel" Visibility="Visible">
                        <Border Background="#161B22" CornerRadius="8" Padding="24" Margin="0,0,0,16" BorderBrush="#30363D" BorderThickness="1">
                            <StackPanel HorizontalAlignment="Center">
                                <TextBlock Text="Your Pairing Code" FontSize="12" Foreground="#8B949E" 
                                           HorizontalAlignment="Center" Margin="0,0,0,12"/>
                                <TextBlock x:Name="PairingCodeDisplay" Text="------" FontSize="32" 
                                           FontWeight="Bold" Foreground="#58A6FF" FontFamily="Consolas"
                                           HorizontalAlignment="Center"/>
                                <TextBlock Text="Share this code with the other device" FontSize="11" 
                                           Foreground="#6E7681" HorizontalAlignment="Center" Margin="0,12,0,0"/>
                            </StackPanel>
                        </Border>
                        
                        <Button x:Name="GenerateNewCodeBtn" Content="ðŸ”„ Generate New Code" 
                                Click="GenerateNewCode_Click" Cursor="Hand"
                                Background="#21262D" Foreground="#C9D1D9" BorderThickness="1"
                                BorderBrush="#30363D"
                                Padding="16,10" HorizontalAlignment="Center">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border x:Name="border" Background="{TemplateBinding Background}" 
                                            BorderBrush="{TemplateBinding BorderBrush}"
                                            BorderThickness="{TemplateBinding BorderThickness}"
                                            CornerRadius="6" Padding="{TemplateBinding Padding}">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="border" Property="Background" Value="#30363D"/>
                                            <Setter TargetName="border" Property="BorderBrush" Value="#A371F7"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                    </StackPanel>
                    
                    <!-- Enter Code Panel -->
                    <StackPanel x:Name="EnterCodePanel" Visibility="Collapsed">
                        <TextBlock Text="Remote Device IP" FontSize="13" Foreground="#C9D1D9" Margin="0,0,0,6"/>
                        <TextBox x:Name="RemoteIpBox" Text="" FontSize="13" Margin="0,0,0,16"
                                 Background="#161B22" Foreground="White" BorderBrush="#30363D"
                                 Padding="12,10" BorderThickness="1">
                            <TextBox.Template>
                                <ControlTemplate TargetType="TextBox">
                                    <Border x:Name="border" Background="{TemplateBinding Background}" 
                                            BorderBrush="{TemplateBinding BorderBrush}" 
                                            BorderThickness="{TemplateBinding BorderThickness}"
                                            CornerRadius="6">
                                        <ScrollViewer x:Name="PART_ContentHost" Margin="{TemplateBinding Padding}"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsFocused" Value="True">
                                            <Setter TargetName="border" Property="BorderBrush" Value="#A371F7"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </TextBox.Template>
                        </TextBox>
                        
                        <TextBlock Text="Enter Pairing Code" FontSize="13" Foreground="#C9D1D9" Margin="0,0,0,6"/>
                        <TextBox x:Name="RemoteCodeBox" Text="" FontSize="24" FontFamily="Consolas"
                                 Background="#161B22" Foreground="#58A6FF" BorderBrush="#30363D"
                                 Padding="12,10" BorderThickness="1" MaxLength="6" 
                                 HorizontalContentAlignment="Center" TextChanged="RemoteCodeBox_TextChanged">
                            <TextBox.Template>
                                <ControlTemplate TargetType="TextBox">
                                    <Border x:Name="border" Background="{TemplateBinding Background}" 
                                            BorderBrush="{TemplateBinding BorderBrush}" 
                                            BorderThickness="{TemplateBinding BorderThickness}"
                                            CornerRadius="6">
                                        <ScrollViewer x:Name="PART_ContentHost" Margin="{TemplateBinding Padding}"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsFocused" Value="True">
                                            <Setter TargetName="border" Property="BorderBrush" Value="#A371F7"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </TextBox.Template>
                        </TextBox>
                        <TextBlock Text="Enter the 6-digit code from the other device" FontSize="11" 
                                   Foreground="#6E7681" Margin="0,4,0,0"/>
                        
                        <TextBlock x:Name="StatusMessage" Text="" FontSize="12" Foreground="#F85149" 
                                   Margin="0,12,0,0" TextWrapping="Wrap"/>
                    </StackPanel>
                    
                </StackPanel>
                
                <!-- Buttons -->
                <Border Grid.Row="2" Background="#161B22" CornerRadius="6" Padding="16,12" Margin="0,16,0,0">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <Button Grid.Column="1" Content="Cancel" Padding="20,10" Margin="0,0,10,0"
                                Background="#21262D" Foreground="#C9D1D9" BorderThickness="1" BorderBrush="#30363D"
                                Cursor="Hand" Click="Cancel_Click">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border x:Name="border" Background="{TemplateBinding Background}" 
                                            BorderBrush="{TemplateBinding BorderBrush}"
                                            BorderThickness="{TemplateBinding BorderThickness}"
                                            CornerRadius="6" Padding="{TemplateBinding Padding}">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="border" Property="Background" Value="#30363D"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                        
                        <Button x:Name="PairButton" Grid.Column="2" Content="Pair Device" Padding="20,10"
                                Background="#238636" Foreground="White" BorderThickness="0" 
                                FontWeight="SemiBold" Cursor="Hand" Click="Pair_Click" IsEnabled="False">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="6" Padding="{TemplateBinding Padding}">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="border" Property="Background" Value="#2EA043"/>
                                        </Trigger>
                                        <Trigger Property="IsEnabled" Value="False">
                                            <Setter TargetName="border" Property="Opacity" Value="0.5"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                    </Grid>
                </Border>
            </Grid>
        </Grid>
    </Border>
</Window>
